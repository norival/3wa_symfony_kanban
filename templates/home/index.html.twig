{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="container">
        <h1>Bienvenue sur la page d'accueil !</h1>
        {% if app.user %}
            <div class="count">
                {{ pagination.getTotalItemCount }}
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for project in pagination %}
                        <tr>
                            <td>
                                {{ project.title }}
                            </td>
                            <td>
                                {{ project.description }}
                            </td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="{{ path('project_show', {slug: project.slug}) }}">Voir</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
